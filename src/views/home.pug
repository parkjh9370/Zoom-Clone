doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header
            h1 Noom
        main
            div#welcome
                form
                    input#roomName(placeholder="room name", required, type="text")
                    input#name(placeholder="Nickname", required, type="text")
                    button Enter Room
                h4 Open Rooms;
                ul
            div#room
                h3
                ul
                form#name
                    input(placeholder="change your nickname", required, type="text")
                    button Change
                form#msg
                    input(placeholder="message name", required, type="text")
                    button Send
        //- 서버에서 제공한 socket.IO 임포트(설치)
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/index.js")